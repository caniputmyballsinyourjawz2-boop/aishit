@inherits LayoutComponentBase

<div class="app-container">
    <div class="sidebar">
        <!-- Logo -->
        <div class="logo-section">
            <div class="logo">AISHIT</div>
        </div>

        <!-- Account -->
        <div class="account-section">
            <div class="account-icon">👤</div>
            <span class="account-text">Account</span>
        </div>

        <!-- Navigation -->
        <nav class="navigation">
            <a href="/" class="nav-item">
                <span class="nav-icon">📊</span>
                <span class="nav-text">Dashboard</span>
            </a>
            
            <a href="/summarizer" class="nav-item">
                <span class="nav-icon">🤖</span>
                <span class="nav-text">AI Quiz Generator</span>
            </a>
            
            <!-- Quiz Practice Section -->
            <div class="nav-item active-section">
                <div class="nav-main">
                    <span class="nav-icon">📝</span>
                    <span class="nav-text active">Quiz Practice</span>
                </div>
                <div class="sub-nav">
                    <a href="/quiz" class="sub-nav-item">Multiple Choice</a>
                    <a href="/flashcard" class="sub-nav-item">Flashcard</a>
                    <a href="/scenario" class="sub-nav-item">Scenario Exam</a>
                </div>
            </div>

            <a href="/summary" class="nav-item">
                <span class="nav-icon">📄</span>
                <span class="nav-text">Summary</span>
            </a>
        </nav>
    </div>

    <div class="main-content">
        <!-- Top Bar -->
        <div class="top-bar">
            <h1 class="app-title">AI Study Assistant</h1>
        </div>

        <!-- Content -->
        <div class="content-area">
            @Body
        </div>
    </div>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .app-container {
        display: flex;
        height: 100vh;
        background: linear-gradient(158deg, #2E6FFF 0%, #0B1566 52%);
        overflow: hidden;
    }

    /* Sidebar */
    .sidebar {
        width: 380px;
        background: linear-gradient(181deg, #2E6DFF 0%, #0B1566 100%);
        border-right: 1px solid #08104C;
        box-shadow: 10px 100px 100px #17206C;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
    }

    .logo-section {
        padding: 20px;
        margin-bottom: 20px;
    }

    .logo {
        width: 232px;
        height: 80px;
        background: #364CFF;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 28px;
        font-weight: bold;
        letter-spacing: 2px;
    }

    .account-section {
        padding: 0 20px;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .account-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #364CFF;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
    }

    .account-text {
        color: #7B9CE9;
        font-size: 25px;
        font-weight: 400;
        letter-spacing: 0.5px;
    }

    /* Navigation */
    .navigation {
        flex: 1;
        padding: 0 20px;
    }

    .nav-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 12px 0;
        cursor: pointer;
        text-decoration: none;
        transition: all 0.3s;
    }

    .nav-icon {
        font-size: 24px;
    }

    .nav-text {
        color: #7B9CE9;
        font-size: 25px;
        font-weight: 400;
        letter-spacing: 0.5px;
    }

    .nav-text.active {
        color: white;
    }

    .nav-item:hover .nav-text {
        color: white;
    }

    /* Active Section */
    .active-section {
        background: linear-gradient(180deg, #0B1566 16%, #2E6CFF 92%);
        border-top: 2px solid #364CFF;
        box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.25);
        margin: 0 -20px;
        padding: 12px 20px;
        margin-bottom: 10px;
        flex-direction: column;
    }

    .nav-main {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 15px;
    }

    .sub-nav {
        padding-left: 40px;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .sub-nav-item {
        color: #7B9CE9;
        font-size: 22px;
        font-weight: 400;
        letter-spacing: 0.44px;
        text-decoration: none;
        padding: 8px 0;
        transition: all 0.3s;
    }

    .sub-nav-item:hover,
    .sub-nav-item.active {
        color: white;
    }

    /* Main Content */
    .main-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

    .top-bar {
        height: 67px;
        background: linear-gradient(90deg, #161E66 0%, #2E6DFF 100%);
        box-shadow: 100px 100px 100px rgba(0, 0, 0, 0.25);
        border-right: 1px solid #364CFF;
        display: flex;
        align-items: center;
        padding: 0 40px;
    }

    .app-title {
        color: white;
        font-size: 40px;
        font-weight: 400;
        letter-spacing: 1px;
        margin: 0;
    }

    .content-area {
        flex: 1;
        overflow-y: auto;
        padding: 40px;
    }

    /* Scrollbar */
    ::-webkit-scrollbar {
        width: 10px;
    }

    ::-webkit-scrollbar-track {
        background: rgba(11, 21, 102, 0.3);
    }

    ::-webkit-scrollbar-thumb {
        background: #364CFF;
        border-radius: 5px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: #2E6FFF;
    }
</style>